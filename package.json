{
  "name": "react-atomic-state",
  "version": "1.2.7",
  "license": "MIT",
  "description": "Dead simple React global state management based on use-sync-external-store",
  "author": "Mathieu Acthernoene <zoontek@gmail.com>",
  "homepage": "https://github.com/zoontek/react-atomic-state#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zoontek/react-atomic-state.git"
  },
  "sideEffects": false,
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "global",
    "react",
    "recoil",
    "redux",
    "state",
    "store",
    "zustand"
  ],
  "scripts": {
    "build": "yarn clean && microbundle -f cjs,es",
    "clean": "rm -rf dist",
    "dev": "microbundle watch",
    "format": "prettier '**/*' -u -w",
    "prepack": "yarn test && yarn build",
    "test": "vitest --run",
    "test:watch": "vitest --watch"
  },
  "browserslist": [
    ">0.2%",
    "not op_mini all",
    "not dead"
  ],
  "prettier": {
    "trailingComma": "all"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "jsdom": "^21.1.0",
    "microbundle": "^0.15.1",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.5",
    "vitest": "^0.28.4"
  }
}
